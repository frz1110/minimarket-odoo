<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <!-- pegawai.pegawai tree view -->
    <record id="pegawai_list_view_tree" model="ir.ui.view">
        <field name="name">List Pegawai</field>
        <field name="model">pegawai.pegawai</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name" />
                <field name="id_pegawai" />
                <field name="status" />
                <field name="role"/>
            </tree>
        </field>
    </record>

 

    <!-- pegawai.pegawai form view -->
    <record id="pegawai_list_view_form" model="ir.ui.view">
        <field name="name">Form Pegawai</field>
        <field name="model">pegawai.pegawai</field>
        <field name="arch" type="xml">
            <form>
            <sheet>
                <group>
                    <field name="name" />
                    <field name="id_pegawai" />
                    <field name="role" placeholder="ex: Software Programmer"/>
                     <field name="status"/>
                </group>
                <group string="Informasi Pribadi">
                    <field name="no_ktp"/>
                    <field name="no_hp" />
                    <field name="alamat" />
                    <field name="tgl_lahir" />
                </group>
                <group string="Catatan Kehadiran">
                    <field name="absensi_ids">
                        <tree>
                            <field name="jam_masuk"/>
                            <field name="jam_keluar"/>
                            <field name="durasi_kerja"/>
                        </tree>
                    </field>
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <!-- pegawai.pegawai action window -->
    <record id="pegawai_list_action" model="ir.actions.act_window">
        <field name="name">Daftar Pegawai</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pegawai.pegawai</field>
        <field name="view_mode">tree,form</field>
    </record>

     <!-- This Menu Item Must have a parent -->
    <menuitem
        id="pegawai_list_menu_categ"
        name="Daftar Pegawai"
        parent="pegawai_menu_root"
        action="pegawai_list_action"
        sequence="10"/>

</odoo>